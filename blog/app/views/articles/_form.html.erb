<h1><%= action %> Artículo</h1>
<%= form_for([@article]) do |f| %>
	<% @article.errors.full_messages.each do |message| %>
	<div class="be-green gray top-space">
		* <%= message %>
	</div>
		
	<%end%>
	<div class="field">
		<%= f.text_field :title, placeholder: "Título", class:"form-control"%>
	</div>
	<div class="field">
		<%= f.text_area :body, placeholder: "Escribe aqui el artículo", style: "height:300px", class:"form-control"%>
	</div>
	<div class="field">
		<%= f.submit "Guardar", class:"btn be-green gray"%>
	</div>
<%end%>